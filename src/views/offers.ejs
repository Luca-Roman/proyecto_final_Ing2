<%- include("partials/_header") %>

  <div class="container d-flex justify-content-center mt-5">
    <div class="row">
      <div class="col-md-10">
        <table class="table table-dark table-bordered table-hover">
          <thead>
            <tr>
              <td>Nro</td>
              <td>Embarcacion</td>
              <td>Puerto</td>
              <td>Descripcion embarcacion</td>
              <td>Usuario ofertor</td>
              <td>Matricula</td>
              <td>Marca</td>
              <td>Modelo</td>
              <td>Año</td>
              <td>Kilometros</td>
              <td>Descripcion</td>
              <td>Acciones</td>
            </tr>
          </thead>
          <tbody>
            <% if (offers) { %>
              <% for(var i=0; i < offers.length; i++) { %>
                <tr>
                  <td>
                    <%= i + 1 %>
                  </td>
                  <td>
                    <%= offers[i].plate%>
                  </td>
                  <td>
                    <%= offers[i].idPuerto %>
                  </td>
                  <td>
                    <%= offers[i].descripcionPublicacion %>
                  </td>
                  <td>
                    <%= offers[i].name %>
                  </td>
                  <td>
                    <%= offers[i].matricula %>
                  </td>
                  <td>
                    <%= offers[i].marca %>
                  </td>
                  <td>
                    <%= offers[i].modelo %>
                  </td>
                  <td>
                    <%= offers[i].año %>
                  </td>
                  <td>
                    <%= offers[i].kilometros %>
                  </td>
                  <td>
                    <%= offers[i].descripcionVehiculo %>
                  </td>
                  <td class="d-flex gap-2">
                    <% if (!transactions) { %>                    
                      <a href="/acceptOffer/<%= offers[i].idOffer %>" class="btn btn-danger">
                        Aceptar
                      </a>
                      <a href="/denyOffer/<%= offers[i].idOffer %>" class="btn btn-danger">
                        Rechazar
                      </a>
                    <% } else { %>
                      <a href="/acceptTransaction/<%= offers[i].idOffer %>" class="btn btn-danger">
                        Aceptar
                      </a>
                      <a href="/denyTransaction/<%= offers[i].idOffer %>" class="btn btn-danger">
                        Rechazar
                      </a>
                    <% } %>
                  </td>
                </tr>
                <% } %>
                  <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  </div>
  </div>

  <%- include("partials/_footer") %>