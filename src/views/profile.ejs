          <a href="/changePassword" class="btn btn-primary align-center  mx-3"> Cambiar
            contraseña</a>
          <a href="/deleteAccount" class="btn btn-primary align-center  mx-3"> Borrar
            cuenta</a>  
        </div>
      </div>


